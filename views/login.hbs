        <div class="text-center">
            <h1>Sign in</h1>
        </div>
        <form name="myForm" action="/login" enctype="application/x-www-form-urlencoded" method="post">
            <div class="container bg-light">
                <div class="row text-center">
                    <div class="p-3 col-sm-12 col-md-12">
                        <label for="email" class="form-label">Username: </label>
                        <input class="form-control" type="text" name="username" id="username" placeholder="username" value="{{data.user}}" autofocus="">
                        {{#unless data.user}}
                        <div style="color:red;">
                            <img src="https://static.xx.fbcdn.net/rsrc.php/v3/y2/r/O287_AcFyg4.png" alt="" width="20"
                                height="20">
                            Please enter the username.
                        </div>
                        {{/unless}}
                        {{#if data.expression}}
                        <div style="color:red;">
                            <img src="https://static.xx.fbcdn.net/rsrc.php/v3/y2/r/O287_AcFyg4.png" alt="" width="20"
                                height="20">
                            No special charecters are allowed.
                        </div>
                        {{/if}}
                    </div>
    
                    <div class="p-3 col-sm-12 col-md-12">
                        <label for="password" class="form-label">Password: </label>
                        <input class="form-control" type="text" name="password" id="password" placeholder="password" value="{{data.pass}}" autofocus="">
                        {{#unless data.pass}}
                        <div style="color:red;">
                            <img src="https://static.xx.fbcdn.net/rsrc.php/v3/y2/r/O287_AcFyg4.png" alt="" width="20"
                                height="20">
                            Please enter the password.
                        </div>
                        {{/unless}}
                    </div>
                     {{#if error}}
                        <div style="color:red;">
                            <img src="https://static.xx.fbcdn.net/rsrc.php/v3/y2/r/O287_AcFyg4.png" alt="" width="20"
                                height="20">
                                {{error}}
                        </div>
                        {{/if}}
                    <div>
                        <button type="submit" class="btn btn-primary">Log In</button>
                    </div>
                </div>
            </div>
        </form>
    
    </body>
